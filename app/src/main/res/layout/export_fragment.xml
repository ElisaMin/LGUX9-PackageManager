<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="me.heizi.box.package_manager.ui.export.ExportViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.export.ExportFragment">

        <androidx.recyclerview.widget.RecyclerView
            app:reverseLayout="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:adapter="@{viewModel.adapter}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            tools:itemCount="13"
            tools:listitem="@layout/item_title_content_view" />
        <com.google.android.material.button.MaterialButton
            android:onClick="@{(view)->viewModel.createNewVersion(view.context)}"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="18dp"
            android:text="添加版本"
            app:icon="@drawable/ic_baseline_add_24" />

    </LinearLayout>
</layout>