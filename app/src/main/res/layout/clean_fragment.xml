<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="me.heizi.box.package_manager.ui.clean.CleanViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.clean.CleanFragment">

        <me.heizi.box.package_manager.custom_view.IconButton
            android:icon="@drawable/ic_outline_done_24"
            app:tint="?android:textColorPrimary"
            android:layout_gravity="end"
            android:layout_width="48dp"
            android:layout_height="48dp" />


        <ProgressBar
            android:visibility="@{viewModel.processing}"
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="16dp"
                    android:hint="可卸载文本"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:lines="1"
                        android:text="@{viewModel.textInput}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:itemCount="13"
                    tools:listitem="@layout/item_uninstall_info_input" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>